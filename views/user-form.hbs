<div class='w-1/2 mx-auto'>
  <h1
    class='text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white'
  >
    Edit profile:
  </h1>
  <form
    hx-post='/auth/user-update'
    hx-target='#mainContent'
    class='space-y-4 md:space-y-6 mb-2'
  >
    <div>

      <label
        for='username-value'
        class='block mb-2 text-sm font-medium text-gray-900 dark:text-white'
      >Username:</label>
      <input
        type='text'
        name='username-value'
        id='username-value'
        value='{{user.username}}'
        class='bg-gray-50 text-gray-900 sm:text-sm rounded-lg w-full'
        readonly
      />
    </div>
    <div>
      <label
        for='openAIKey-value'
        class='block mb-2 text-sm font-medium text-gray-900 dark:text-white'
      >OpenAIApiKey:</label>
      <input
        type='text'
        name='openAIKey-value'
        id='openAIKey-value'
        value='{{user.openAIKey}}'
        class='bg-gray-50 text-gray-900 sm:text-sm rounded-lg w-full p-2.5'
      />
    </div>
    <button
      class='w-full text-white bg-primary-600 font-medium rounded-lg text-sm px-5 py-2.5 text-center'
    >Save</button>
  </form>
</div>